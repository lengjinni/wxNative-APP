/**index.wxss**/
page {
  width: 100%;
  height: 100%;
}
.header {
  width: 100%;
  height: 380rpx;
}
.header swiper, .header navigator {
  height: 380rpx;
}
.header image {
  width: 100%;
  height: 100%;
}
.content {
  display: flex;
  background-color: #ffffff;
  flex-wrap: wrap;
  font-size: 28rpx;
  color: #777;
  border-bottom: 1rpx solid #eeeeee;
}
.content .item {
  display: flex;
  flex-direction: column;
  width: 33.33%;
  height: 250rpx;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #eeeeee;
  border-top: 1rpx solid #eeeeee;
  box-sizing: border-box;
}
.content .item:nth-of-type(3n) {
  border-right: none;
}

.content .item image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 20rpx;
}

.footer {
  display: flex;
  padding: 30rpx;
  background-color: #ffffff;
  margin: 10rpx 0;
}
.footer image {
  flex: 1;
  height: 200rpx;
}
.footer image:first-child {
  margin-right: 30rpx;
}